{
  "name": "mineflayer-mcp-server",
  "version": "1.0.0",
  "description": "MCP server for AI agents controlling Minecraft bots",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "typecheck": "tsc --noEmit",
    "start": "node dist/index.js",
    "start:game-agent": "node dist/agent/claude-agent.js",
    "start:claude": "~/.bun/bin/bun dist/agent/claude-agent.js",
    "start:mcp-ws": "node dist/mcp-ws-server.js",
    "start:mcp-ws:watch": "nodemon --watch dist/mcp-ws-server.js --watch dist/bot-manager.js --watch dist/tools dist/mcp-ws-server.js",
    "start:dev-agent": "node dist/agent/dev-agent.js",
    "start:self-improve": "MANAGE_GAME_AGENT=true node dist/agent/dev-agent.js",
    "board": "node dist/realtime-board.js",
    "board:view": "node dist/board-viewer.js",
    "start:mamba": "cd /Users/shingo/Develop/mamba-agent && ./run.sh",
    "claude:loop": "./scripts/claude-loop.sh",
    "claude:interactive": "./scripts/claude-interactive-loop.sh",
    "claude:team": "./scripts/claude-team-loop.sh",
    "agent:start": "./scripts/start-agent.sh",
    "agent:stop": "npx pm2 stop minecraft-agent board-viewer",
    "agent:restart": "npx pm2 restart minecraft-agent",
    "agent:logs": "npx pm2 logs minecraft-agent",
    "agent:status": "npx pm2 status",
    "team:start": "./scripts/start-agent-team.sh",
    "team:stop": "npx pm2 stop team-lead team-member-1 team-member-2",
    "team:logs": "npx pm2 logs team-lead team-member-1 team-member-2",
    "team:restart": "npx pm2 restart team-lead team-member-1 team-member-2"
  },
  "keywords": [
    "mcp",
    "minecraft",
    "mineflayer",
    "ai",
    "claude"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.2.29",
    "@anthropic-ai/sdk": "^0.72.1",
    "@modelcontextprotocol/sdk": "^1.0.0",
    "@modelcontextprotocol/server-filesystem": "^2026.1.14",
    "canvas": "^3.2.1",
    "chokidar": "^5.0.0",
    "dotenv": "^16.3.1",
    "minecraft-data": "^3.78.0",
    "mineflayer": "^4.20.1",
    "mineflayer-pathfinder": "^2.4.5",
    "node-fetch": "^3.3.2",
    "prismarine-viewer": "^1.33.0",
    "vec3": "^0.1.10",
    "ws": "^8.19.0"
  },
  "devDependencies": {
    "@types/chokidar": "^1.7.5",
    "@types/node": "^20.10.0",
    "@types/ws": "^8.18.1",
    "nodemon": "^3.1.11",
    "pm2": "^6.0.14",
    "typescript": "^5.3.0"
  }
}
