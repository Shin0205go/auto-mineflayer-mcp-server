{
  "hooks": {
    "Write": [
      {
        "matcher": "^(?!src/|\\.claude/skills/).*",
        "hooks": [
          {
            "type": "command",
            "command": "echo '❌ File creation only allowed in src/ and .claude/skills/' && exit 1"
          }
        ]
      }
    ],
    "Edit": [
      {
        "matcher": "^(?!src/|\\.claude/skills/).*",
        "hooks": [
          {
            "type": "command",
            "command": "echo '❌ File editing only allowed in src/ and .claude/skills/' && exit 1"
          }
        ]
      }
    ]
  }
}
